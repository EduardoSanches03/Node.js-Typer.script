<!-- detalhesCliente.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Detalhes do Cliente</title>
</head>
<body>
    <form action=""></form>
    <h1>Detalhes do Cliente</h1>
    
    <h2>Informações do Cliente:</h2>
    <p>Nome: <%= atualizarClientes.nome %></p>
    <p>CPF: <%= atualizarClientes.cpf %></p>
    <p>Telefone: <%= atualizarClientes.telefone %></p>
    <p>Email: <%= atualizarClientes.email %></p>
    
    <h2>Atualizar Dados do Cliente:</h2>
    <form action="/atualizar" method="POST">
        <input type="hidden" name="id" value="<%= atualizarClientes._id %>">
        
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= atualizarClientes.nome %>">
        
        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" value="<%= atualizarClientes.cpf %>">
        
        <label for="telefone">Telefone:</label>
        <input type="text" id="telefone" name="telefone" value="<%= atualizarClientes.telefone %>">
        
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="<%= atualizarClientes.email %>">
        
        <button type="submit">Atualizar</button>
    </form>
</body>
</html>
